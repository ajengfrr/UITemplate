        function toggleSidebar() {
            var x = window.matchMedia("(min-width: 1200px)");
            if (x.matches) {
                if ($("body").hasClass("toggle-sidebar")) {
                    $("body").removeClass("toggle-sidebar");
                    $("#main").css("margin-left", "250px");
                    $(".nav-item .nav-link span").css("display", "block");
                    $(".sidebar-nav .nav-item .nav-link").css("margin-left", "0px");
                }
                else {
                    $("body").addClass("toggle-sidebar");
                    $(".nav-item .nav-link span").css("display", "none");
                    $(".sidebar-nav .nav-item .nav-link").css("margin-left", "190px");
                    $("#main").css("margin-left", "50px");
                }
            }
            else {
                $(".container .card").css("width", "1300px");
                $("#main").css("margin-left", "0px");

                if ($("body").hasClass("toggle-sidebar")) {
                    $("body").removeClass("toggle-sidebar");
                }
                else {
                    $("body").addClass("toggle-sidebar");
                }
            }
            
        }
    </script>
